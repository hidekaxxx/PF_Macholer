<!DOCTYPE html>
<html>
  <head>
    <title>MacholerApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    
  </head>

  <body>
    <header>
      <div class="header-logo">
        <!--ログイン時のリンク制限（ログイン時、非ログイン時のリンクに行くと制限される）-->
        <% if @current_user %>
          <%= link_to("Macholer", "/posts/index") %>
        <% else %>
          <%= link_to("Macholer", "/") %>
        <% end %>
      </div>
      <ul class="header-menus">

        <% if @current_user %>
          <li>
            <%= link_to(@current_user.name, "/users/#{@current_user.id}") %>
          </li>
          <!-- ログイン時のヘッダー -->
          <li>
            <%= link_to("【Time Line】", "/posts/index") %>
          </li>
          <li>
            <%= link_to("【Today's Training！】", "/posts/new") %>
          </li>
          <li>
            <%= link_to("【Users】", "/users/index") %>
          </li>
          <li>
            <%= link_to("【Logout】", "/logout", {method: "post"}) %>
          </li>
        <% else %>
          <!-- 非ログイン時のヘッダー -->
          <li>
            <%= link_to("【Macholerとは】", "/about") %>
          </li>
          <li>
            <%= link_to("【Sign UP】", "/signup") %>
          </li>
          <li>
            <%= link_to("【Login】", "/login") %>
          </li>
        <% end %>
      </ul>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
